<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_height="@dimen/dp_80">
    <CheckBox
        android:id="@+id/shopping_rv_cb"
        android:layout_centerVertical="true"
        android:button="@null"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@drawable/cart_cb_selector"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"/>
    <ImageView
        android:id="@+id/shopping_rv_img"
        android:src="@mipmap/ic_launcher_round"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"/>
    <TextView
        android:id="@+id/shopping_rv_name"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@id/shopping_rv_img"
        android:textColor="#000000"
        android:text="双宫茧桑丝被 空调被"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/shopping_rv_price"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_toRightOf="@id/shopping_rv_img"
        android:textColor="#000000"
        android:text="￥699"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/shopping_rv_number"
        android:textColor="#000000"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:text="x10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/shopping_rv_selected"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:layout_marginRight="@dimen/dp_15"
        android:text="已选择：>"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.example.shopping.common.AddDeleteView
        android:id="@+id/shopping_rv_adddeleteview"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </com.example.shopping.common.AddDeleteView>
</RelativeLayout>