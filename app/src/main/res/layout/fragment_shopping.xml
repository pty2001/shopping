<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.shopping.ShoppingFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:background="#EFEDED"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_10"
            android:layout_gravity="center|left"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="⊙30天无忧退款" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_10"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="⊙48小时快速退款" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:textSize="@dimen/sp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:text="⊙满88元免邮费" />
    </FrameLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/shopping_rv"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <CheckBox
            android:id="@+id/shopping_cb"
            android:layout_centerVertical="true"
            android:button="@null"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/cart_cb_selector"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"/>
        <TextView
            android:id="@+id/shopping_allcheck"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:layout_marginLeft="@dimen/dp_50"
            android:text="全选(1)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/shopping_allprices"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:layout_marginLeft="@dimen/dp_100"
            android:text="￥1111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/shopping_compile"
            android:text="编辑"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@id/shopping_belowsingle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/shopping_belowsingle"
            android:textSize="@dimen/sp_15"
            android:gravity="center"
            android:textColor="#ffffff"
            android:background="#C51414"
            android:layout_alignParentRight="true"
            android:text="下单"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_50"/>
    </RelativeLayout>
</RelativeLayout>