<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.me.MeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="#302F2F"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"/>
        <TextView
            android:textSize="@dimen/sp_15"
            android:layout_margin="@dimen/dp_5"
            android:textColor="#ffffff"
            android:text="我的"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/ic_launcher_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/me_login"
            android:layout_marginTop="@dimen/dp_70"
            android:layout_marginLeft="@dimen/dp_95"
            android:textSize="@dimen/sp_20"
            android:textColor="#ffffff"
            android:text="点击登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:rotation="180"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_70"
            android:src="@drawable/icon_me_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000000"
            android:text="我的订单"
            android:background="@drawable/gray_frame"
            android:gravity="center"
            android:drawableTop="@mipmap/ic_launcher_round"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_80"/>
        <TextView
            android:textColor="#000000"
            android:text="优惠卷"
            android:background="@drawable/gray_frame"
            android:gravity="center"
            android:drawableTop="@mipmap/ic_launcher_round"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_80"/>
        <TextView
            android:textColor="#000000"
            android:text="礼品卡"
            android:background="@drawable/gray_frame"
            android:gravity="center"
            android:drawableTop="@mipmap/ic_launcher_round"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_80"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000000"
            android:text="我的收藏"
            android:background="@drawable/gray_frame"
            android:gravity="center"
            android:drawableTop="@mipmap/ic_launcher_round"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_80"/>
        <TextView
            android:textColor="#000000"
            android:text="我的足迹"
            android:background="@drawable/gray_frame"
            android:gravity="center"
            android:drawableTop="@mipmap/ic_launcher_round"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_80"/>
        <TextView
            android:textColor="#000000"
            android:text="会员福利"
            android:background="@drawable/gray_frame"
            android:gravity="center"
            android:drawableTop="@mipmap/ic_launcher_round"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_80"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/me_address"
            android:textColor="#000000"
            android:text="地址管理"
            android:background="@drawable/gray_frame"
            android:gravity="center"
            android:drawableTop="@mipmap/ic_launcher_round"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_80"/>
        <TextView
            android:textColor="#000000"
            android:text="账号安全"
            android:background="@drawable/gray_frame"
            android:gravity="center"
            android:drawableTop="@mipmap/ic_launcher_round"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_80"/>
        <TextView
            android:textColor="#000000"
            android:text="联系客服"
            android:background="@drawable/gray_frame"
            android:gravity="center"
            android:drawableTop="@mipmap/ic_launcher_round"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_80"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000000"
            android:text="帮助中心"
            android:background="@drawable/gray_frame"
            android:gravity="center"
            android:drawableTop="@mipmap/ic_launcher_round"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_80"/>
        <TextView
            android:textColor="#000000"
            android:text="意见反馈"
            android:background="@drawable/gray_frame"
            android:gravity="center"
            android:drawableTop="@mipmap/ic_launcher_round"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_80"/>
        <TextView
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_80"/>
    </LinearLayout>
</LinearLayout>