<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.shopping.ParticularsActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/particulars_banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_360"
                android:background="@mipmap/ic_launcher" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="#EFEDED"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_10"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="⊙30天无忧退款" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_10"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="⊙48小时快速退款" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:textSize="@dimen/sp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="⊙满88元免邮费" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="双宫蚕桑丝被 空调被"
                    android:textColor="#090808"
                    android:textSize="@dimen/sp_20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="双宫蚕桑丝被 空调被"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="￥699"
                    android:textColor="#CD3737"
                    android:textSize="@dimen/dp_15" />

                <TextView
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_25"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/tangerine_conner"
                    android:gravity="center"
                    android:text="罗莱制造商 >"
                    android:textColor="#FF5722" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_5"
                android:background="#DAD9D9" />
            <RelativeLayout
                android:id="@+id/relaytive"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="#040303"
                    android:text="请选择规格数量"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                    <ImageView
                        android:rotation="180"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/icon_finsh"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView
                android:background="#DAD9D9"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_6"/>
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#040404"
                android:text="评价(30)"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_5"
                android:drawableRight="@drawable/icon_more"
                android:layout_marginRight="@dimen/dp_10"
                android:text="查看全部"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
            <TextView
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_7"
                android:background="#DAD9D9" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/particulars_tv_time"
                    android:text="2017-04-19 20:30:44"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/particulars_tv_content"
                    android:textColor="#232323"
                    android:layout_marginTop="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textSize="@dimen/sp_13"
                    android:text="晾了两天 现在盖了 好舒服啊！已经爱上网易了严选了 要剁手了"
                    android:layout_width="wrap_content"
                    android:ems="21"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:id="@+id/particulars_liner_img"
                    android:layout_marginTop="@dimen/dp_80"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_80"/>
            </RelativeLayout>
            <TextView
                android:layout_marginTop="@dimen/dp_20"
                android:background="#DAD9D9"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_6"/>
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="#000000"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_15"
                android:text="商品参数"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/particulars_liner_title"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <WebView
                android:id="@+id/particulars_webview"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="WebViewLayout" />
            <TextView
                android:layout_marginTop="@dimen/dp_30"
                android:text="——  常见问题  ——"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/particulars_rv"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center"
                android:text="——  大家都在看  ——"
                android:layout_marginTop="@dimen/dp_60"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/line1"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp_50">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_collect"
                android:layout_weight="1"
                android:layout_width="@dimen/dp_30"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/particulars_iv_cart"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_cart"
                android:layout_weight="1"
                android:layout_width="@dimen/dp_30"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/particulars_tv_number"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:textSize="@dimen/sp_12"
                android:textColor="#2B0707"
                android:layout_alignRight="@id/particulars_iv_cart"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="0"
                android:gravity="center"
                android:background="@drawable/card_background"/>
        </RelativeLayout>
        <TextView
            android:gravity="center"
            android:textColor="#000000"
            android:text="立即购买"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/particulars_shopping_car"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:background="#B61D1D"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
</RelativeLayout>